<div class='container'>
  <div class='row'>
    <div class = "col-sm-8 col-md-8 col-lg-5 px-5 px-sx-0 mx-auto">
     <h1>Editing Book</h1>
       <%= render 'layouts/error', obj: @book %>
       <%= form_with model: @book, local: true do |f| %>
       
       <div class="form-group">
        <label for="book_title">Title</label>
       <div><%= f.text_field :title, class: "form-control book_title" %></div>
       </div>
       
       <div class="form-group">
       <label for="book_opinion">Opinion</label>
       <div><%= f.text_area :body, class: "form-control book_body" %></div>
       </div>
       <%= f.submit 'Update Book', class:'btn btn-success' %>
       <% end %>
      
       
       
       <%= link_to 'Show', book_path(@book) %> |
       <%= link_to 'Back', books_path %>
    </div>
  </div>
</div>